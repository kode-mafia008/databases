# ChromaDB Configuration
CHROMA_VERSION=latest
CHROMA_PORT=8083
CHROMA_HOST=chroma
CHROMA_PERSISTENCE_DIRECTORY=/chroma/data
CHROMA_ALLOW_RESET=false
CHROMA_AUTH_PROVIDER=token
CHROMA_AUTH_CREDENTIALS_PROVIDER=chromadb.auth.token.TokenAuthCredentialsProvider
CHROMA_AUTH_CREDENTIALS_FILE=/chroma/auth_credentials.json

# Resource Limits
CHROMA_CPU_LIMIT=2
CHROMA_CPU_RESERVATION=0.5
CHROMA_MEMORY_LIMIT=4G
CHROMA_MEMORY_RESERVATION=1G

# Logging Configuration
CHROMA_LOG_MAX_SIZE=200m
CHROMA_LOG_MAX_FILE=3

# Network Configuration
DOCKER_SUBNET=172.28.0.0/16

# Optional Monitoring
CHROMA_OTEL_SERVICE_NAME=chromadb
CHROMA_OTEL_EXPORTER_ENDPOINT=